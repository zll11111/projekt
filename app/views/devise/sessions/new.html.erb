<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4 ">
        <h2 class="title is-2">登录</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <div class="control">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: {autocomplete: "email", class: "input"}, wrapper: false, label: "电子邮箱", label_html: {class: "label"} %>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <%= f.input :password,
                            required: false,
                            input_html: {autocomplete: "current-password", class: "input"}, wrapper: false, label: "密码", label_html: {class: "label"} %>

              </div>
            </div>
            <div class="field">
            <div class="control">
            <%= f.input :remember_me, as: :boolean, wrapper: false, label: "记住我" if devise_mapping.rememberable? %>
            </div>
            </div>

            <div class="control">
              <%= f.button :submit, "登 录", class: "button is-outlined" %>
            </div>

        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>